<!---->
{{#if hasErrors}}
    <div class="alert alert-danger">
        {{# each messages }}
            <p>{{this}}</p>
        {{/each}}
    </div>
{{/if}}

{{#if msg_success}}
    <div class="alert alert-success">{{msg_success}}</div>
{{/if}}

{{#if msg_error}}
    <div class="alert alert-danger">{{msg_error}}</div>
{{/if}}

{{#if error}}

    <div class="alert alert-danger">{{error}}</div>

{{/if}}